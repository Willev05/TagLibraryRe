<UserControl x:Class="TagLibraryRe.View.UserControls.TagsDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TagLibraryRe.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Tags:" Foreground="#EEEEEE" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="2"/>
        <ListView Grid.Row="1" ItemsSource="{Binding Tags}" Background="Transparent" Foreground="#EEEEEE"/>
    </Grid>
</UserControl>
