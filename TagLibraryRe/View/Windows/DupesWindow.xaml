<Window x:Class="TagLibraryRe.View.Windows.DupesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TagLibraryRe.View.Windows"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="Duplicates" Height="450" Width="800" Background="#222222">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Duplicate filenames were found in directory! Please select an option below!" Foreground="#EEEEEE" FontSize="32" FontWeight="Bold" TextWrapping="Wrap"/>
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="Duplicate file names:" Foreground="#EEEEEE" FontSize="16"/>
            <ListView Background="Transparent" Foreground="#EEEEEE" ItemsSource="{Binding Duplicates}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="btnProg" Height="40" Width="200" Margin="5" Content="Let program rename" Click="btnProg_Click"/>
            <Button Name="btnUser" Height="40" Width="200" Margin="5" Content="Rename or move myself" Click="btnUser_Click"/>
        </StackPanel>

    </Grid>
</Window>
