<Window x:Class="TagLibraryRe.View.Windows.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TagLibraryRe.View.Windows"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Title="Enter Text" Height="200" Width="400">
    <Grid Background="#222222">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Height="50" Width="250" VerticalContentAlignment="Center" FontSize="26" Name="txtInput"/>
        <StackPanel Height="50" HorizontalAlignment="Center" Grid.Row="1" Orientation="Horizontal">
            <Button Name="btnOK" Width="100" Margin="5" Content="OK" Click="btnOK_Click"/>
            <Button Name="btnCancel"  Width="100" Margin="5" Content="Cancel" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
