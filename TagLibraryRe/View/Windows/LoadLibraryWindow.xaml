<Window x:Class="TagLibraryRe.View.Windows.LoadLibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TagLibraryRe.View.Windows"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="Load Library" Height="450" Width="800" Background="#222222">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Please select a library to load!" Foreground="#EEEEEE" FontSize="32" FontWeight="Bold" TextWrapping="Wrap" HorizontalAlignment="Center"/>
        <ListView Grid.Row="1" HorizontalAlignment="Center" Background="Transparent" Foreground="#EEEEEE" ItemsSource="{Binding LibraryNames}" SelectedItem="{Binding SelectedLibrary}" SelectionMode="Single"/>
        <Button Grid.Row="2" Name="btnSelect" Height="40" Width="200" Margin="5" Content="Select" Click="btnSelect_Click"/>
    </Grid>
</Window>
